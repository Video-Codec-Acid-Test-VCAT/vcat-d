<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Staging Folder Label -->
    <TextView
        android:id="@+id/label_staging_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Staging Folder"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_staging_folder"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <!-- Staging Folder EditText -->
    <EditText
        android:id="@+id/edit_staging_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select folder..."
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_staging_folder"
        app:layout_constraintTop_toBottomOf="@+id/label_staging_folder"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginEnd="8dp"/>

    <!-- Staging Folder Browse Button -->
    <Button
        android:id="@+id/button_staging_folder"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="…"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_staging_folder"/>

    <!-- Vector Name Label -->
    <TextView
        android:id="@+id/label_vector_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vector Name"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@+id/edit_staging_folder"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Vector Name EditText -->
    <EditText
        android:id="@+id/edit_vector_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter vector name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_vector_name"
        android:layout_marginTop="4dp"/>

    <!-- Created By Label -->
    <TextView
        android:id="@+id/label_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created By"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@+id/edit_vector_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Created By EditText -->
    <EditText
        android:id="@+id/edit_created_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter creator name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_created_by"
        android:layout_marginTop="4dp"/>

    <!-- Description Label -->
    <TextView
        android:id="@+id/label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@+id/edit_created_by"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Description EditText (multi-line) -->
    <EditText
        android:id="@+id/edit_description"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Enter description"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_description"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
