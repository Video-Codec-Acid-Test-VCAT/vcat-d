<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_test_vectors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvCatalogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Vector Catalog"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- URL entry + download button -->
    <LinearLayout
        android:id="@+id/llCatalogInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etCatalogUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter catalog URL"
            android:inputType="textUri"/>

        <ImageButton
            android:id="@+id/btnOpenCatalog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_load_catalog"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Open Catalog"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Select All checkbox above the list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:layout_marginBottom="4dp">

        <CheckBox
            android:id="@+id/cbSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSelectAllText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="Select All"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Scrollable table of entries -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableLayout
            android:id="@+id/tableVectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"/>

    </ScrollView>

    <!-- Bottom-centered download button -->
    <ImageButton
        android:id="@+id/btnDownloadPlaylists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_download"
        android:contentDescription="Download All"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
