<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar fixed at top -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/aboutToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_blue"
        android:title="@string/about_vcat"
        app:titleTextColor="@android:color/white"
        android:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white"
        app:titleTextAppearance="@style/Toolbar.WhiteTitleText"/>

    <!-- Main content below toolbar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo + Description Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <ImageView
                    android:id="@+id/aboutLogo"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/vcat_logo_tnsp"
                    android:contentDescription="@string/about_heading" />

                <TextView
                    android:id="@+id/aboutDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="@string/about_vcat_description"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Build info -->
            <TextView
                android:id="@+id/aboutBuildInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <!-- Contributors -->
            <TextView
                android:id="@+id/aboutContributors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_contributors"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <!-- Links -->
            <TextView
                android:id="@+id/linkRoncatech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/url_roncatech"
                android:autoLink="web"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/linkIttiam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/url_ittiam"
                android:autoLink="web"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="4dp" />

            <!-- License -->
            <ImageButton
                android:id="@+id/licenseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_license"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/view_license"
                android:visibility="gone"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
